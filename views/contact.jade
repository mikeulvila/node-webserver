extends ./layout.jade

block content

  .container
    h1 Contact
    form(method='POST')
      .form-group
        label Name
        input(type='text', name='name', placeholder='Name')
      .form-group
        label Email
        input(type='email', name='email', placeholder='Email')
      .form-group
        label Message
        textarea(name='message', placeholder='Message')

      button.btn.btn-primary(type='submit') Contact Us!


